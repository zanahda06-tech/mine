  </footer>

  <!-- Modal Detail -->
  <div id="detailModal" class="fixed inset-0 z-50 hidden bg-black bg-opacity-60 flex items-center justify-center p-4">
    <div class="modal-content bg-white rounded-xl shadow-2xl w-full max-w-2xl transform transition-all duration-300 p-6 sm:p-8">
      <div class="flex justify-between items-start mb-4">
        <h3 id="modalTitle" class="text-2xl font-bold text-slate-900">Judul Modal</h3>
        <button id="closeModal" class="text-slate-500 hover:text-slate-800 transition">
          <!-- Ikon X (Close) dari SVG -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div id="modalBody" class="text-slate-700 space-y-4">
        <!-- Konten detail dimuat di sini -->
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const cards = document.querySelectorAll('#cards article');
      const modal = document.getElementById('detailModal');
      const modalTitle = document.getElementById('modalTitle');
      const modalBody = document.getElementById('modalBody');
      const closeModalButton = document.getElementById('closeModal');
      const body = document.body;

      // Fungsi untuk menampilkan modal
      const openModal = (targetId) => {
        const contentSection = document.getElementById(targetId);

        if (contentSection) {
          // 1. Set Judul Modal (Ambil dari H3 di dalam contentSection)
          const titleElement = contentSection.querySelector('h3');
          modalTitle.textContent = titleElement ? titleElement.textContent : 'Detail Topik';

          // 2. Set Konten Modal (Ambil semua childNodes dari contentSection)
          // Kosongkan modalBody terlebih dahulu
          modalBody.innerHTML = '';
          
          // Kloning dan masukkan semua elemen kecuali judul (H3 pertama)
          Array.from(contentSection.children).forEach((child, index) => {
            if (child.tagName.toLowerCase() !== 'h3' || index !== 0) {
              modalBody.appendChild(child.cloneNode(true));
            }
          });

          // 3. Tampilkan Modal
          modal.classList.remove('hidden');
          // Mencegah scrolling di body saat modal terbuka
          body.classList.add('overflow-hidden');
        }
      };

      // Fungsi untuk menyembunyikan modal
      const closeModal = () => {
        modal.classList.add('hidden');
        body.classList.remove('overflow-hidden');
      };

      // Event listener untuk setiap kartu
      cards.forEach(card => {
        card.addEventListener('click', (event) => {
          // Pastikan klik pada tautan atau tombol tidak memicu modal ganda
          // Ini memastikan tautan Portofolio tetap berfungsi sebagai tautan.
          if (event.target.closest('a') || event.target.tagName.toLowerCase() === 'button') {
            return; // Biarkan link/button bekerja secara normal
          }
          
          const targetId = card.getAttribute('data-target');
          if (targetId) {
            openModal(targetId);
          }
        });
      });

      // Event listener untuk tombol tutup modal
      closeModalButton.addEventListener('click', closeModal);

      // Event listener untuk menutup modal saat mengklik di luar konten modal
      modal.addEventListener('click', (event) => {
        // Jika yang diklik adalah modal itu sendiri (bukan konten modal)
        if (event.target === modal) {
          closeModal();
        }
      });

      // Event listener untuk menutup modal dengan tombol ESC
      document.addEventListener('keydown', (event) => {
        if (event.key === 'Escape' && !modal.classList.contains('hidden')) {
          closeModal();
        }
      });
    });
  </script>

</body>
